@page "/counter"
@inject Primer _p

<h1>Counter</h1>

<p>Current count: @_p.Broj</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
	protected override void OnInitialized()
	{
		_p.OnPromena += StateHasChanged;
	}

	private void IncrementCount()
	{
		_p.Broj++;
	}
}
